<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <GridLayout
        android:id="@+id/root"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_margin="10dp"
        android:background="#DC3030"
        android:columnCount="3"

        android:rowCount="3"
        android:verticalSpacing="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <include
            android:id="@+id/kasten1"
            layout="@layout/kasten_grid" />

        <include
            android:id="@+id/kasten2"
            layout="@layout/kasten_grid" />

        <include
            android:id="@+id/kasten3"
            layout="@layout/kasten_grid" />

        <include
            android:id="@+id/kasten4"
            layout="@layout/kasten_grid" />

        <include
            android:id="@+id/kasten5"
            layout="@layout/kasten_grid" />

        <include
            android:id="@+id/kasten6"
            layout="@layout/kasten_grid" />

        <include
            android:id="@+id/kasten7"
            layout="@layout/kasten_grid" />

        <include
            android:id="@+id/kasten8"
            layout="@layout/kasten_grid" />

        <include
            android:id="@+id/kasten9"
            layout="@layout/kasten_grid" />


    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
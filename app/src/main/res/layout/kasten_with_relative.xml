<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <Button
                android:id="@+id/a1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/a4"
                android:layout_alignParentTop="true"
                android:insetTop="0dp"
                android:insetBottom="0dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_above="@+id/a4"
                android:background="#000000"
                android:orientation="horizontal" />

            <Button
                android:id="@+id/a4"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_centerInParent="true"
                android:insetTop="0dp"
                android:insetBottom="0dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_above="@+id/a7"
                android:background="#000000"
                android:orientation="horizontal" />

            <Button
                android:id="@+id/a7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/a4"
                android:layout_alignParentBottom="true"
                android:insetTop="0dp"
                android:insetBottom="0dp" />

        </RelativeLayout>

        <View
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="#000000"
            android:orientation="vertical" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <Button
                android:id="@+id/a2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/a5"
                android:layout_alignParentTop="true"
                android:insetTop="0dp"
                android:insetBottom="0dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_above="@+id/a5"
                android:background="#000000"
                android:orientation="horizontal" />

            <Button

                android:id="@+id/a5"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_centerInParent="true"
                android:insetTop="0dp"
                android:insetBottom="0dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_above="@+id/a8"
                android:background="#000000"
                android:orientation="horizontal" />

            <Button
                android:id="@+id/a8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/a5"
                android:layout_alignParentBottom="true" />

        </RelativeLayout>

        <View
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="#000000"
            android:orientation="vertical" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <Button
                android:id="@+id/a3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/a6"
                android:layout_alignParentTop="true" />

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_above="@+id/a6"
                android:background="#000000"
                android:orientation="horizontal" />

            <Button
                android:id="@+id/a6"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_centerInParent="true" />

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_above="@+id/a9"
                android:background="#000000"
                android:orientation="horizontal" />

            <Button
                android:id="@+id/a9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/a6"
                android:layout_alignParentBottom="true" />

        </RelativeLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
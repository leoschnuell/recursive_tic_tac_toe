<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/player_player_but"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:onClick="open_field"
        android:text="Player vs Player"
        app:layout_constraintBottom_toTopOf="@+id/player_ai_but"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="105dp" />

    <Button
        android:id="@+id/player_ai_but"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Player vs AI"
        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="421dp" />

    <Button
        android:id="@+id/ai_ai_but"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="AI vs AI"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player_ai_but"
        tools:layout_editor_absoluteX="105dp" />
</androidx.constraintlayout.widget.ConstraintLayout>